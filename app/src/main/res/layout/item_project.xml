<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewImageView"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_margin="12dp"
            android:elevation="12dp"
            app:cardCornerRadius="18dp">

            <ImageView
                android:id="@+id/imageViewItems"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/dream_steak" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cardViewImageView"
            android:layout_toEndOf="@id/cardViewImageView"
            android:fontFamily="sans-serif-black"
            android:padding="4dp"
            android:textColor="#0C6363"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Project Name" />

        <TextView
            android:id="@+id/textViewDescriptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewName"
            android:layout_toEndOf="@id/cardViewImageView"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="4dp"
            android:textSize="14sp"
            tools:text="This is Project Description" />

        <TextView
            android:id="@+id/textViewLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDescriptions"
            android:layout_toEndOf="@id/cardViewImageView"
            android:autoLink="web"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="4dp"
            android:textSize="14sp"
            android:textStyle="italic"
            tools:text="This is Project Description" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>