<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="12dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardViewImageView"
            android:layout_margin="12dp"
            app:cardCornerRadius="18dp"
            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                tools:src="@drawable/dream_steak"
                android:scaleType="centerCrop"
                android:id="@+id/imageViewItems"
                />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cardViewImageView"
            tools:text="Project Name"
            android:textColor="#0C6363"
            android:padding="4dp"
            android:layout_alignTop="@id/cardViewImageView"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:textSize="18sp"
            />

        <TextView
            android:padding="4dp"
            android:id="@+id/textViewDescriptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cardViewImageView"
            android:layout_below="@id/textViewName"
            tools:text="This is Project Description"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="14sp"
            />



    </RelativeLayout>

</androidx.cardview.widget.CardView>